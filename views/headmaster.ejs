<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Headmaster Portal</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container mt-4">
      <!-- Section: Design Block -->
      <section class="background-radial-gradient overflow-hidden">
        <style>
          .background-radial-gradient {
            background-color: hsl(218, 41%, 15%);
            background-image: radial-gradient(
                650px circle at 5% 10%,
                hsl(190, 51%, 25%) 15%,
                hsl(222, 68%, 4%) 35%,
                hsl(218, 0%, 20%) 75%,
                hsl(214, 17%, 8%) 80%,
                transparent 100%
              ),
              radial-gradient(
                1250px circle at 100% 100%,
                hsl(219, 37%, 7%) 15%,
                hsl(218, 84%, 41%) 35%,
                hsl(122, 66%, 35%) 75%,
                hsl(22, 51%, 35%) 80%,
                transparent 100%
              );
          }

          .bg-glass {
            background-color: hsla(0, 0%, 100%, 0.9) !important;
            backdrop-filter: saturate(200%) blur(25px);
          }
        </style>

        <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
          <div class="row gx-lg-5 align-items-center mb-5">
            <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
              <h1
                class="my-5 display-5 fw-bold ls-tight"
                style="color: hsl(218, 81%, 95%)"
              >
                Welcome to <br />
                <span style="color: hsl(218, 81%, 75%)">Innovation School</span>
              </h1>
              <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
                Lorem ipsum dolor, sit amet consectetur adipisicing elit.
                Temporibus, expedita iusto veniam atque, magni tempora mollitia
                dolorum consequatur nulla, neque debitis eos reprehenderit quasi
                ab ipsum nisi dolorem modi. Quos?
              </p>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
              <div
                id="radius-shape-1"
                class="position-absolute rounded-circle shadow-5-strong"
              ></div>
              <div
                id="radius-shape-2"
                class="position-absolute shadow-5-strong"
              ></div>

              <div class="card bg-glass">
                <div class="card-body px-4 py-5 px-md-5">
                  <form action="/headmaster" method="POST">
                    <!-- 2 column grid layout with text inputs for the first and last names -->
                    <div class="row">
                      <% if (messages.error) { %>
                      <div class="alert alert-danger">
                        <strong><%= messages.error %> </strong>
                      </div>
                      <% } %>

                      <h1 class="mb-3 h3">Headmaster Portal</h1>
                    </div>

                    <!-- Name input -->
                    <div class="form-outline mb-4">
                      <input
                        type="name"
                        name="name"
                        id="form3Example3"
                        class="form-control"
                      />
                      <label class="form-label" for="form3Example3"
                        >Enter name</label
                      >
                    </div>

                    <!--*****************radio buttons to separate students and teachers******************-->
                    <div class="stu">
                      <input
                        type="radio"
                        id="student"
                        name="sub"
                        value="student"
                      />
                      <label for="student">Student&nbsp;&nbsp;&nbsp;</label>
                    </div>

                    <div class="tea">
                      <input
                        type="radio"
                        id="teacher"
                        name="sub"
                        value="teacher"
                      />
                      <label for="teacher">Teacher</label><br /><br />
                    </div>

                    <!--*****************select buttons for teachers******************-->
                    <!-- Class input -->
                    <div class="form-outline mb-4">
                      <!--<input
                        type="password"
                        name="password"
                        id="form3Example4"
                        class="form-control"
                      />-->
                      <label class="form-label" for="form3Example4"
                        >Select class</label
                      >
                      <div class="cher"
                      <select name="class" id="class">
                        <option value="class1">&nbsp;Class-1</option>
                        <option value="class2">Class-2</option>
                        <option value="class3">Class-3</option>
                        <option value="class4">Class-4</option>
                      </select>
                      </div>
                    </div>

                    <!--*****************select buttons for teachers******************-->
                    <div class="form-outline mb-4">
                      <!--<input
                        type="password"
                        name="password"
                        id="form3Example4"
                        class="form-control"
                      />-->
                      <label class="form-label" for="form3Example4"
                        >Select class</label
                      >
                      <div class="cher"
                      <select name="sec" id="sec">
                        <option value="secA">&nbsp;Section A</option>
                        <option value="secB">Section B</option>
                        <option value="secC">Section C</option>
                      </select>
                      </div>
                    </div>

                    <!--*****************radio buttons for students******************-->
                    <div class="dent">
                      <input type="radio" id="cl" name="cl" value="cl" />
                      <label for="class1">Class-1&nbsp;&nbsp;&nbsp;</label>

                      <input type="radio" id="cl" name="cl" value="cl" />
                      <label for="class2">Class-2&nbsp;&nbsp;&nbsp;</label>

                      <input type="radio" id="cl" name="cl" value="cl" />
                      <label for="class3">Class-3&nbsp;&nbsp;&nbsp;</label>

                      <input type="radio" id="cl" name="cl" value="cl" />
                      <label for="class4">Class-4&nbsp;&nbsp;&nbsp;</label>
                      <br /><br />

                      <!--*************radio buttons for sectioning students**************-->
                      <input type="radio" id="sec" name="sec" value="sec" />
                      <label for="sec">Section A&nbsp;&nbsp;&nbsp;</label>

                      <input type="radio" id="sec" name="sec" value="sec" />
                      <label for="sec">Section B&nbsp;&nbsp;&nbsp;</label>

                      <input type="radio" id="sec" name="sec" value="sec" />
                      <label for="sec">Section C&nbsp;&nbsp;&nbsp;</label>
                    </div>
                    <br /><br />

                    <!-- Submit button -->
                    <button
                      type="submit"
                      class="btn btn-primary btn-block mb-4"
                    >
                      Submit
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- Section: Design Block -->
    </div>

    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2"
      crossorigin="anonymous"
    ></script>
    <script>
      var student = document.getElementsByClassName('stu')[0];
      var teacher = document.getElementsByClassName('tea')[0];
      var teacherIg = document.getElementsByClassName('cher')[];
      var studentIg = document.getElementsByClassName('dent');

      teacherIg.disabled = true;
      studentIg.disabled = true;
      
      student.addEventListner('stu', function(event) {
        teacherIg.disabled = !teacherIg.disabled;
      });

      teacher.addEventListner('tea', function(event) {
        studentIg.disabled = !studentIg.disabled;
      });
    </script>
  </body>
</html>
